<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= marathon.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/marathons/<%= marathon._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="marathon[name]" value="<%= marathon.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="marathon[image]" value="<%= marathon.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="marathon[description]" value="<%= marathon.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/marathons">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

