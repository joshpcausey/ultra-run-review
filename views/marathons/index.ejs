<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To Ultra Run Review!</h1>
             <p>View our hand-picked marathons from all over the world</p>
             <p>
                <a class="btn btn-primary btn-large" href="/marathons/new">Add New Marathon</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% marathons.forEach(function(marathon){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= marathon.image %>">
                   <div class="caption">
                       <h4><%= marathon.name %></h4>
                   </div>
                   <p>
                       <a href="/marathons/<%= marathon._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<% include ../partials/footer %>
